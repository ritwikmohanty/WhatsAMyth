# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/whatsamyth

# Security
SECRET_KEY=changeme-in-production-use-long-random-string
INTERNAL_TOKEN=internal-secret-token-for-bots

# Bot Tokens
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# LLM Configuration
# Options: ollama, local_transformers
LLM_BACKEND=local_transformers
OLLAMA_URL=http://localhost:11434
# For local_transformers, uses a small model like TinyLlama

# Storage Paths
FAISS_INDEX_PATH=/data/faiss.index
MEMORY_GRAPH_PATH=/data/memory_graph.json

# TTS Configuration
# Options: coqui, pyttsx3
TTS_PROVIDER=pyttsx3

# Server
APP_HOST=0.0.0.0
APP_PORT=8000

# CORS
FRONTEND_ORIGIN=http://localhost:3000

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Feature Flags
ENABLE_BOTS=false
ENABLE_BACKGROUND_VERIFICATION=true
VERIFICATION_INTERVAL_SECONDS=60
